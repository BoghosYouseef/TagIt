<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="FilesRootPane" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tagit.ui.FilesTabController">
    <top>
        <HBox>
            <VBox alignment="CENTER">
                <Button fx:id="importButton" text="+ Import Files" onAction="#onImport" />
            </VBox>
            <VBox style="-fx-padding: 16; -fx-border-color: #8b5a8b33; -fx-border-width: 0 0 1 0; -fx-background-color: -bg-color;">
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Files" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <Label fx:id="fileCountLabel" text="(0 files)" style="-fx-font-size: 14; -fx-text-fill: #a0a0a0;" />
                </HBox>
                <Label text="Browse and manage your files" style="-fx-font-size: 12; -fx-text-fill: #a0a0a0; -fx-padding: 4 0 0 0;" />
            </VBox>
        </HBox>
    </top>
    <center>
        <TableView 
            fx:id="filesTable"
            maxWidth="Infinity"
            minWidth="600" 
            maxHeight="Infinity" 
            prefWidth="800"
            >
            <columns>                
                <TableColumn fx:id="nameColumn" styleClass="file-column" />
                <TableColumn fx:id="typeColumn" styleClass="file-column" />
                <TableColumn fx:id="sizeColumn" styleClass="file-column" />
                <TableColumn fx:id="modifiedColumn" styleClass="file-column" />
                <TableColumn fx:id="tagsColumn" styleClass="file-column"  />
                <TableColumn fx:id="locationColumn" styleClass="file-column" />
            </columns>       
        </TableView>    
    </center>
</BorderPane>
