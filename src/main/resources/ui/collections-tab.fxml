<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tagit.ui.CollectionsTabController">
    <top>
        <VBox style="-fx-padding: 16; -fx-border-color: #8b5a8b33; -fx-border-width: 0 0 1 0; -fx-background-color: -bg-color;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Collections" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" />
            </HBox>
            <Label text="Organize your files into collections" style="-fx-font-size: 12; -fx-text-fill: #a0a0a0; -fx-padding: 4 0 0 0;" />
        </VBox>
    </top>
    <center>
        <TilePane fx:id="collectionsTile" hgap="16" vgap="16" prefColumns="3" tileAlignment="TOP_LEFT" style="-fx-padding: 16; -fx-background-color: -bg-color;" />
    </center>
    <bottom>
        <Button fx:id="addCollectionButton" text="+ New Collection" style="-fx-padding: 10 20; -fx-background-color: #ff6b35; -fx-text-fill: white; -fx-font-size: 12; -fx-cursor: hand;" onAction="#onAddCollection" />
    </bottom>
</BorderPane>
